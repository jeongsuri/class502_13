<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.MemberMapper">
    <resultMap id="memberMap" type="member.Member">
        <result column="USER_NO" property="userNo" />
        <result column="USER_ID" property="userId" />
        <result column="USER_PW" property="userPw" />
        <result column="USER_NM" property="userNm" />
        <result column="MOBILE" property="mobile" />
        <result column="REG_DT" property="regDt" />
        <result column="MOD_DT" property="modDt" />
    </resultMap>

    <select id="getList" resultMap="memberMap"><!--클래스경로  or 매퍼된변수이름-->
        SELECT * FROM MEMBER
    </select>
    <!--
       <select id="getList3" resultMap="memberMap">
           SELECT * FROM MEMBER
           <trim prefix="WHERE" prefixOverrides="AND | OR">
               <if test="userId != null">
                   USER_ID = #{userId}
               </if>
               <if test="userNm != null">
                   AND USER_NM LIKE #{userNm}
               </if>
               <if test="mobile != null">
                   AND MOBILE LIKE #{mobile}
               </if>
           </trim>
       </select>
   -->
    <select id="getList3" resultMap="memberMap">
        <bind name="P_userNm" value="'%' + _parameter.getUserNm() + '%'" />
   <!--        _parameter은 MemberMapper인터페이스를 가르킨다.-->
        <bind name="P_mobile" value="'%' + _parameter.getMobile() + '%'" />
        SELECT * FROM MEMBER
        <where>
            <if test="userId != null">
                USER_ID = #{userId}
            </if>
            <if test="userNm != null">
                AND USER_NM LIKE #{P_userNm}
            </if>
            <if test="mobile != null">
                AND MOBILE LIKE #{P_mobile}
            </if>
        </where>
    </select>
    <select id="getList4" resultMap="memberMap">
        SELECT * FROM MEMBER
        <where>
            <foreach item="item" index="index" collection="list" open="USER_ID IN (" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>
    <select id = "getList5">
        SELECT * FROM MEMBER WHERE
        <![CDATA[USER_NO > #{userNo}
        ]]>
    </select>
    <insert id="register">
        INSERT INTO MEMBER (USER_NO, USER_ID, USER_PW, USER_NM, MOBILE)
        VALUES (SEQ_MEMBER.NEXTVAL, #{userId}, #{userPw}, #{userNm}, #{mobile})
    </insert>
    <insert id="register2">
        <selectKey keyProperty="userNo" order="BEFORE" resultType="long">
            <!-- 시퀀스객체에 값을 넣을수 있게함.  insert쿼리를 수행하기 전에 먼저 수행해야하기 때문에 BEFORE -->
            SELECT SEQ_MEMBER.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO MEMBER (USER_NO, USER_ID, USER_PW, USER_NM, MOBILE)
        VALUES (#{userNo}, #{userId}, #{userPw}, #{userNm}, #{mobile})
        <!-- SELECT SEQ_MEMBER.NEXTVAL FROM DUAL을통해 가져온 시퀀스값을 userno에 넣음 -->
    </insert>
    <update id="modify">
        UPDATE MEMBER
        SET
            USER_PW = #{userPw},
            USER_NM = #{userNm},
            MOBILE = #{mobile},
            MOD_DT = SYSDATE
        WHERE USER_ID = #{userId}
    </update>
    <update id="modify2"> <!--동적 SQL-->
        UPDATE MEMBER
        <set>
            <if test="userPw != null"> <!--동적 SQL-->
                USER_PW = #{userPw},
            </if>
            <if test="userNm != null"> <!--동적 SQL-->
            USER_PW = #{userNm},
            </if>
            <if test="mobile != null"> <!--동적 SQL-->
            MOBILE = #{mobile},
            </if>
            MOD_DT = SYSDATE
        </set>
        WHERE USER_ID = #{userId}
    </update>
    <delete id="delete">
        DELETE FROM MEMBER
        WHERE USER_ID = #{userId}
    </delete>

</mapper>